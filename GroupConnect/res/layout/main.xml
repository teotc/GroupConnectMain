<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <SlidingDrawer
            android:id="@+id/slideDrawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:content="@+id/content"
            android:handle="@+id/btn"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/right" />

            <ScrollView
                android:id="@id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1C1C1C" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="View Statistic"
                        android:textColor="#FFFFFF"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Education Level: "
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/chkPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Primary"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                    <CheckBox
                        android:id="@+id/chkSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Secondary"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                    <CheckBox
                        android:id="@+id/chkPolytechnic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Polytechnic"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Category: "
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <RadioGroup
                        android:id="@+id/radioCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" >
                    </RadioGroup>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <Button
                            android:id="@+id/btnSearch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="15dp"
                            android:onClick="Search"
                            android:text="Search" />
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </SlidingDrawer>
    </RelativeLayout>

</RelativeLayout>