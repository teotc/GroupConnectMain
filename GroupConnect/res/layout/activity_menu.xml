<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Menu" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layoutDirection="ltr" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome" />

        <TextView
            android:id="@+id/menuUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="test" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/imgbnSearch"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/layout_bg"
            android:drawableTop="@drawable/ic_menu_search"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:text="@string/title_search" />

        <Button
            android:id="@+id/imgbnSetUp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_toRightOf="@+id/imgbnSearch"
            android:background="@drawable/layout_bg"
            android:drawableTop="@drawable/ic_menu_preferences"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:text="@string/title_setup" />

        <Button
            android:id="@+id/imgbnYourGroups"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/imgbnSearch"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_bg"
            android:drawableTop="@drawable/ic_menu_allfriends"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:text="@string/title_yourgroups" />
    </RelativeLayout>

</RelativeLayout>